<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gibddyola" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_orange_400</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_orange_300</item>
        <item name="colorSecondaryVariant">@color/amber_orange_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="fontFamily">@font/microsoftsansserif</item>


        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/myChipsStyleActionBaseStyle</item>
    </style>

    <!-- ДЛЯ API меньше 30 SPLASH SCREEN -->
    <style name="Theme.NewSplashScreen" parent="Theme.Gibddyola" />

</resources>