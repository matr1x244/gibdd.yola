<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--myChipsStyleActionBaseStyle-->
    <style name="myChipsStyleActionBaseStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="rippleColor">@color/color_transparent</item>
    </style>

    <!--myTabsStyle-->
    <style name="myTabsStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabRippleColor">@color/white</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabIndicatorAnimationDuration">5</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:background">@drawable/bg_rounded_stocks_header</item>
        <item name="android:elevation">@dimen/dp2</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--mySnackBarStyle-->
    <style name="mySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
        <item name="elevation">@dimen/dp5</item>
        <item name="android:layout_margin">@dimen/dp5</item>
        <item name="backgroundTint">@color/amber_orange_700</item>

    </style>

    <!--myCustomActivityAnimation-->
    <style name="myCustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/to_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/to_left_out</item>
    </style>

    <!--myCustomDialogAnimation-->
    <style name="myCustomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <!--myCustomAlertDialog-->
    <style name="myAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveButton</item>
    </style>

    <style name="positiveButton">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>