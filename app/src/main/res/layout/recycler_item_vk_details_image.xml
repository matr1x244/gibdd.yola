<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vk_news_details_rv_image_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/vk_news_details_rv_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vk_news_full_image_height"
        android:layout_gravity="top|center_horizontal"
        android:scaleType="centerCrop"
        tools:src="@mipmap/logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_back"
        android:layout_width="@dimen/dp36"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom"
        android:paddingHorizontal="@dimen/dp3"
        android:src="@drawable/ic_turn_signal_left"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/arrow_forward"
        android:layout_width="@dimen/dp36"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:paddingHorizontal="@dimen/dp3"
        android:src="@drawable/ic_turn_signal_right"
        android:visibility="gone"
        tools:visibility="visible" />

</FrameLayout>