<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_fragment_results_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.geekbrains.gibddyola.utils.EquilateralImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:src="@mipmap/driver_license">
    </com.geekbrains.gibddyola.utils.EquilateralImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_name_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/result_test_pdd"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textview_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:gravity="center"
        android:text="@string/number_correct_answers"
        android:textColor="@color/black"
        android:textSize="@dimen/size_text_view_score"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reload_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="@dimen/dp10"
        android:backgroundTint="@color/green_game"
        android:text="@string/test_game_again"
        android:textColor="@color/white"
        android:textSize="@dimen/size_text_btn_again_game"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_exit_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@color/red_game"
        android:text="Выйти из игры"
        android:textColor="@color/white"
        android:textSize="@dimen/size_text_btn_again_game"/>


</LinearLayout>