                <!--    БЛОК НАЧАЛО ИГРЫ-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_layout_count_of_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tv_out_of_questions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_layout_game">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите свой уровень:"
            android:paddingStart="@dimen/dp5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_questions">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Чайник" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Дачник" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Гонщик" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Водила" />

        </RadioGroup>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_group"
            app:srcCompat="@mipmap/logo" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_begin_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Проверить свой уровень"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    БЛОК НАЧАЛО ИГРЫ-->

        <!--  ИГРА КОНЧИЛАСЬ?  -->

    <TextView
        android:id="@+id/tv_out_of_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вопросы кончились "
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/game_layout_window"
        tools:visibility="invisible" />

    <!--  БЛОК САМОЙ ИГРЫ  -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/game_layout_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_layout_count_of_questions"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/conteiner_image_question"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/dp5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_image_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:visibility="visible"
                app:srcCompat="@mipmap/logo" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/conteiner_tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conteiner_image_question">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/dp5"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:text="Вопрос: " />

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_answers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conteiner_tv_question" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            app:layout_constraintBottom_toTopOf="@+id/btn_check"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_answers">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_answer_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp3"
                    android:text="Комментарий к ответу"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </ScrollView>

        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответить"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <!--    КНОПКА ДАЛЕЕ ВОПРОС-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/yellow"
        android:text="Далее"
        android:textSize="30sp"
        app:icon="@drawable/ic_play_btn"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>